<div class="container" id="content">
    <div class="row mt-5">
        <div class="col-12" id="byCat-article">
            {{#each listArticle}}
            <div class="d-flex mt-5">

                <div class="row no-gutters align-items-strech">
                    <div class="col-4">
                        <div class="mb-2 img-cont1">
                            <img src="/article/{{images}}" alt="{{ID}}-{{title}}" title="{{c_Name}}: {{id}}-{{title}}"
                                style="width: 300px;height:250px" class="card-img lazyload" alt="...">
                        </div>
                    </div>
                    <div class="col-8">
                        <div class="">
                            <a href="/article/details/{{c_ID}}/{{id}}" class="text-dark link_bycat">
                                <h5 class="card-title" title="{{title}}">{{title}}</h5>
                            </a>
                            <h6 class="card-subtitle mb-2 text-muted d-none d-sm-block">
                                <a href="/categories/{{tc_alias}}/{{c_alias}}"
                                    class="article-category badge badge-primary mr-3">{{c_Name}}</a>
                                <span class="article-date">
                                    <i class="far fa-calendar-alt mr-1"></i>
                                    {{format_DOB public_date}}
                                </span>
                            </h6>
                            <h6 class="article-tags d-none d-sm-block">
                                <i class="fas fa-tags mr-2"></i>
                                <a href="#" class="badge badge-warning">{{tag}}</a>

                            </h6>
                            <div class="card-text d-none d-md-block">
                                {{abstract}}

                            </div>
                        </div>
                    </div>
                </div>
            </div>
            {{/each}}

        </div>
        <div class="col-12 d-flex justify-content-center mt-5">
            <nav aria-label="...">
                <ul class="pagination">
                    <li class="page-item {{#unless can_go_prev}}disabled{{/unless}}">
                        <a class="page-link" href="?page={{prev_value}}" aria-label="Previous">
                            <span aria-hidden="true">&laquo;</span>
                        </a>
                    </li>
                    {{#each this.page_items}}
                    {{#if isActive}}
                    <li class="page-item active" aria-current="page">
                        <span class="page-link">
                            {{value}}
                            <span class="sr-only">(current)</span>
                        </span>
                    </li>
                    {{else}}
                    <li class="page-item {{#if isDisabled}}disabled{{/if}}">
                        <a class="page-link" href="?page={{value}}">{{value}}</a>
                    </li>
                    {{/if}}
                    {{/each}}
                    <li class="page-item {{#unless can_go_next}}disabled{{/unless}}">
                        <a class="page-link" href="?page={{next_value}}" aria-label="Next">
                            <span aria-hidden="true">&raquo;</span>
                        </a>
                    </li>
                </ul>
            </nav>
        </div>
    </div>
</div>