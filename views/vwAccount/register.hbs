$('#frmRegister').on('submit', function (e) {
    //alert('submit called');
    e.preventDefault();
    // if (validate())
    //   $('#frmRegister').off('submit').submit();
    validate();
  })

// validation function

  function validate() {
    // ... các lệnh validate khác
    const user = $('#username').val();
        if( user== ""){
        alert('null')
        return false;
    }
    $.getJSON(`/is-available?user=${user}`, function (data) {
      if (data === false) {
        $('#frmRegister').off('submit').submit();
      } else {
        alert('not available');
      }
    })
  }
</script>

