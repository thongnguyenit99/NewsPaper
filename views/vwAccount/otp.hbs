{{#section 'js'}}
    <script>
        $('#formotp').on('submit', function (e) {
            e.preventDefault();
            validate();
        })
        function validate(){
            const otp_1 = $('#otp1').val();
            if(otp_1== ""){
                alert('OTP không được rỗng.')
                    return false;
            }
            if(otp_1.length < 6 ){
                alert('OTP có 6 ký tự.')
                return false;
            }
            if(otp_1.length > 6 ){
                alert('OTP có 6 ký tự.')
                return false;
            }
            
            $.getJSON(`/account/login/forgotpassword/is-available_otp?otp=${otp_1}`, function (data) {
                if (data) {
                    $('#formotp').off('submit').submit();
                } else {
                    alert('OTP không hợp lệ.');
                }
            })
        }
    </script>

{{/section}}

<div class="container">
    <div class="row" style="margin-top: 52px;margin-bottom: 52px;">
        <div class="col-sm-6 mx-auto">
                <div class="panel panel-default">
                    <div class="panel-body">
                        <div class="text-center">
                          <img src="data:image/jpeg;base64," 
                           alt="logo-otp" width="200px" height="auto"/>
                          <h2 class="text-center mt-1" style="color: red; font-weight:300">XÁC NHẬN OTP</h2>
                          <p>Vui lòng nhập mã OTP vừa được gửi vô email của bạn(6 chữ số)</p>
                          <div class="panel-body">
                              
                              <form id="formotp" method="POST" class="form">
                                <fieldset>
                                  <div class="form-group">
                                    <div class="input-group">
                                      <span class="input-group-addon"><i class="glyphicon glyphicon-envelope color-blue"></i></span>
                                      <input id="otp1" name="otp" placeholder="Nhập mã otp được gửi đính kèm trong email" class="form-control">
                                    </div>
                                  </div>
                                  <div class="form-group">
                                    <input class="btn btn-lg btn-primary btn-block" value="Xác Nhận" title="Xác nhận mã OTP" type="submit">
                                  </div>
                                </fieldset>
                              </form>
                              
                            </div>
                        </div>
                    </div>
                </div>
            </div>
    </div>
</div>