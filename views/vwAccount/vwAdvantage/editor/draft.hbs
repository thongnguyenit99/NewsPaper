{{#section 'css'}}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jquery-datetimepicker/2.5.20/jquery.datetimepicker.min.css">
{{/section}}
{{#section 'js'}}
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-datetimepicker/2.5.20/jquery.datetimepicker.full.min.js"></script>

    <script>
        $('#txtDOB').datetimepicker({
            format: 'd/m/Y',
            timepicker: false,
            mask: true,
        });
    </script>

{{/section}}

<div class="container" style="margin-top: 10%;">
    <h4 style="margin-bottom: 3%;"><i class="fa fa-eye"> Bản xem trước :</i></h4>
    {{#each _draft}}
    <h2 class="display-4 font-weight-bold">{{title}}</h2>
    <div class="row">
        <div class="col">
            <div id="article-detail" class="my-3">
                <img src="/article/{{images}}" style="width:900px;height:400px" class="img-fluid">
                <div class="container-fuild">
                    {{{content}}}
                </div>
            </div>
            <h6 class="article-tags d-none d-sm-block">
                <a href="#" class="badge badge-secondary">{{splitTitle tag }}&nbsp; x</a>
                <a href="#" class="badge badge-secondary">{{splitTitle1 tag }} &nbsp;x</a>
                <a href="#" class="badge badge-secondary">{{splitTitle2 tag }} &nbsp;x</a>
            </h6>
        </div>
    </div>
    {{/each}}
    <div style="margin-top: 5%;">
        <form method="POST">
            <div class="form-group">
                <input type="number" class="form-control" name="id" value="{{this.articledraft.id}}" id="id" placeholder="id" hidden>
                <input type="number" class="form-control" name="sts_id" value="1" id="sts_id" placeholder="id" hidden>
                <input type="text" class="form-control" name="note" value="" id="id" placeholder="id" hidden>
            </div>
            <div class="form-group input-group">
            <div class="input-group-prepend w-100">
                <span class="input-group-text"> <i class="fa fa-calendar"></i> </span>
                <input placeholder="__/__/____" type="text" class="form-control" id="txtDOB" name="dob" required>
            </div>
        </div> 
            <div class="form-group">
                <label for="ChuyenMuc">Chuyên Mục :</label>
                <select class="form-control" name="c_ID" id="ChuyenMuc">
                    <option value="1">Cổ phiếu top đầu</option>
                    <option value="2">Xu hướng nhận định</option>
                    <option value="3">Bất động sản</option>
                    <option value="4">Doanh nghiệp niêm yết</option>
                    <option value="5">Ngân hàng điện tử</option>
                    <option value="6">Thương mại điện tử</option>
                </select>
            </div>
            <div class="form-group">
                <label for="tag">Tag :</label>
                <input type="text" class="form-control" name="tag" value="{{this.articledraft.tag}}" id="tag" placeholder="tag">
            </div>
            <button type="submit" class="btn btn-primary">Duyệt Bài</button>
        </form>
    </div>
    <div style="margin-top: 5%;">
        <form method="POST">
             <input type="number" class="form-control" name="id" value="{{this.articledraft.id}}" id="id" placeholder="id" hidden>
             <input type="number" class="form-control" name="sts_id" value="3" id="sts_id" placeholder="id" hidden>
             
            <div class="form-group">
                <label for="tag">Lý do bài bị từ chối :</label>
                <textarea class="form-control" name="note" id="node" rows="3"></textarea>
            </div>
            <button type="submit" class="btn btn-danger">Từ chối</button>
        </form>
    </div>
</div>