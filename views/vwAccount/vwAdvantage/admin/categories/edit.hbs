
<div class=" container">
    <div class="card-header">
        <h4>Chỉnh sửa chuyên mục</h4>
    </div>
    <div class="card-body">
        <form method="POST" id="frmUpdateCat">
            <div class="form-group">
                <label for="txtID">STT</label>
                <input type="text" class="form-control" id="txtID" name="ID" readonly
                    value="{{this.cats.ID}}">
            </div>
            <div class="form-group">
                <label for="txtName">Tên chuyên mục cha</label>
                <select class="form-control" value="{{this.cats.tc_Name}}" id="txtName">
                    <option value="{{this.cats.tcID}}">{{#if this.cats.tcID}}
                        {{this.cats.tc_Name}}
                        {{/if}}
                    </option>
                </select>
            </div>
            <div class="form-group">
                <label for="txtname">Tên chuyên mục con</label>
                <input type="text" class="form-control" id="txtname"  name="c_Name" autofocus
                    value="{{this.cats.c_Name}}">
            </div>
            <div class="form-group">
                <label for="txtalias">Bí danh</label>
                <input type="text" class="form-control" id="txtalias" name="c_alias" autofocus
                    value="{{this.cats.c_alias}}">
            </div>
            

            <a class="btn btn-success" href="/admin/categories" role="button" title="Trở về danh sách">
                <i class="fa fa-backward" aria-hidden="true"></i>
            </a>
            <button type="submit" class="btn btn-danger" title="Xóa chuyên mục" formaction="/admin/categories/del">
                <i class="fa fa-trash" aria-hidden="true"></i>
            </button>
            <button type="submit" id="btnUpdateCat" class="btn btn-primary" formaction="/admin/categories/update">
                <i class="fa fa-check" aria-hidden="true"></i>
                Lưu
            </button>
        </form>
    </div>
   
</div>
