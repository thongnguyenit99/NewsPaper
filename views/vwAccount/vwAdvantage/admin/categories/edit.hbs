{{#section 'js'}}
<script>
    $('#frmUpdateCat').on('submit', function (e) {
        e.preventDefault();
        validate();
    })
    function validate() {
        const nameCat = $('#txtname').val();
        const aliasCat = $('#txtalias').val();
        const img = $('#c_images').val();
        if (nameCat == "" && aliasCat == "") {
            alert("Nội không được rỗng!!Mời bạn nhập lại!");
            return false;
        }
        else if (nameCat == "") {
            alert("Tên chuyên mục không được rỗng!!Mời bạn nhập lại!");
            return false;
        }
        else if (aliasCat == "") {
            alert("Bí danh chuyên mục không được rỗng!!Mời bạn nhập lại!");
            return false;
        }
        else if (img == "") {
            alert("Hình chuyên mục không được rỗng!!Mời bạn nhập lại!");
            return false;
        }
        $('#frmUpdateCat').off('submit').submit();
    }
</script>
{{/section}}
<div class=" container">
    <div class="card-header">
        <h4>Chỉnh sửa chuyên mục con</h4>
    </div>
    <div class="card-body">
        <form method="POST" id="frmUpdateCat" enctype="multipart/form-data" action="/admin/categories/update">
            <div class="form-group">
                <label for="txtID">STT</label>
                <input type="text" class="form-control" id="txtID" name="ID" readonly
                    value="{{this.cats.ID}}">
            </div>
            <div class="form-group">
                <label for="txtName">Tên chuyên mục cha</label>
                <select class="form-control" value="{{this.cats.tc_Name}}" id="txtName">
                    <option value="{{this.cats.tcID}}">{{#if this.cats.tcID}}
                        {{this.cats.tc_Name}}
                        {{/if}}
                    </option>
                </select>
            </div>
            <div class="form-group">
                <label for="txtname">Tên chuyên mục con</label>
                <input type="text" class="form-control" id="txtname"  name="c_Name" autofocus
                    value="{{this.cats.c_Name}}">
            </div>
            <div class="form-group">
                <label for="txtalias">Bí danh</label>
                <input type="text" class="form-control" id="txtalias" name="c_alias" autofocus
                    value="{{this.cats.c_alias}}">
            </div>
            <div class="form-group">
                <label for="exampleInputFail">Hình ảnh</label>
                <div>
                    <img src="/admin/img/{{this.cats.c_images}}" alt="{{this.cats.c_Name}}"
                        title="{{this.cats.ID}}-{{this.cats.c_Name}}" style="width: 400px;margin: 10px;border-radius: 2% ">
                </div>
                <input type="file" class="form-control" id="exampleInputFail" name="c_images">
            </div>

            <a class="btn btn-success" href="/admin/categories" role="button" title="Trở về danh sách">
                <i class="fa fa-backward" aria-hidden="true"></i>
            </a>
            <button type="submit" id="btnUpdateCat" class="btn btn-primary">
                <i class="fa fa-check" aria-hidden="true"></i>
                Lưu
            </button>
        </form>
    </div>
   
</div>
