{{#section 'js'}}
<script>
    $('#addCat').on('submit', function (e) {
        e.preventDefault();
        validate();
    })
    function validate() {
        const nameCat = $('#txtname').val();
        const aliasCat = $('#txtalias').val();
        const img=$('#images').val();
        if (nameCat == "" && aliasCat == "" && img=="") {
            alert("Nội không được rỗng!!Mời bạn nhập lại!");
            return false;
        }
        else if (nameCat == "") {
            alert("Tên chuyên mục không được rỗng!!Mời bạn nhập lại!");
            return false;
        }
        else if (aliasCat == "") {
            alert("Bí danh chuyên mục không được rỗng!!Mời bạn nhập lại!");
            return false;
        }
        else if (img == "") {
            alert("Hình chuyên mục không được rỗng!!Mời bạn nhập lại!");
            return false;
        }
        $('#addCat').off('submit').submit();
    }
</script>
<script>
    $('#images').fileinput({
        theme: 'fa',
        showCaption: true,
        dropZoneEnabled: true,
        allowedFileExtensions: ['png', 'jpg', 'gif'],
        language: 'vi'
    });
</script>
{{/section}}
<div class="container">
    <div class="col-8 justify-content-center addcat">
        <h4 class="mt-5 text-success">Thêm chuyên mục </h4>
        <div class="card-body Cat">
            <form method="POST" action="" id="addCat"  enctype="multipart/form-data">
                <div class="form-group">
                    <label for="txtConName">Tên chuyên mục <span class="validate">*</span></label>
                    <input type="text" class="form-control" id="txtname" name="tc_Name">
                </div>

                <div class="form-group">
                    <label for="exampleInputHomePage1">Bí danh <span class="validate">*</span></label>
                    <input type="text" class="form-control" placeholder="vd: doanh-nhan" id="txtalias"
                        name="alias">
                </div>
                <div class="form-group">
                    <label for="images"><b>Upload hình ảnh</b> <span class="validate">*</span></label>
                    <div>
                        <img src="/admin/img/{{this.cats.images}}" alt="{{this.cats.tc_Name}}"
                            title="{{this.cats.ID}}-{{this.cats.tc_Name}}" style="width: 400px;margin: 10px;border-radius: 2% ">
                    </div>
                    <input type="file" class="form-control" id="images" name="images" >
                </div>
                <a class="btn btn-success mt-3" href="/admin/categories" role="button" title="Trở về chuyên mục">
                    <i class="fa fa-backward" aria-hidden="true"></i>
                </a>
                <button type="submit" class="btn btn-primary mt-3">
                    <i class="fa fa-check" aria-hidden="true"></i>
                    Lưu
                </button>
            </form>
        </div>

    </div>
</div>