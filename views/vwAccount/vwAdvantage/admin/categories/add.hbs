<div class="container">
    <div class="col-8 justify-content-center addcat">

        <h4 class="mt-5 text-success">Thêm chuyên mục </h4>
        <div class="card-body Cat">
            <form method="POST" action="">
            <div class="form-group">
                <label for="exampleInputFail">Chuyên mục cha</label>
                <select name="tc_ID" id="NameConId" class="form-control ">
                    {{#each this.typeCat }}
                    <option value="{{ID}}">{{#if ID}}{{tc_Name}}
                        {{/if}}</option>
                    {{/each}}
                </select>
            </div>
                <div class="form-group">
                    <label for="txtConName">Tên chuyên mục</label>
                    <input type="text" class="form-control" id="txtConName" name="c_Name">
                </div>

                <div class="form-group">
                    <label for="exampleInputHomePage1">Bí danh</label>
                    <input type="text" class="form-control" id="exampleInputHomePage1" placeholder="vd: bai-hoc-kinh-doanh"
                     name="c_alias">
                </div>
                <div class="form-group">
                <label for="exampleInputFail">Bí danh cha</label>
                <select name="tc_alias" id="NameConId" class="form-control ">
                    {{#each this.typeCat }}
                    <option value="{{alias}}">{{#if ID}}{{alias}}
                        {{/if}}</option>
                    {{/each}}
                </select>
               </div>

                <a class="btn btn-success" href="/admin/categories" role="button" title="Back to List">
                    <i class="fa fa-backward" aria-hidden="true"></i>
                </a>
                <button type="submit" class="btn btn-primary">
                    <i class="fa fa-check" aria-hidden="true"></i>
                    Save
                </button>
            </form>
        </div>

    </div>
</div>