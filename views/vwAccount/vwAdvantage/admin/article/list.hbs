<div class="container justify-content-sm-center">
    <h3 style="text-align: center;" class="mb-5 text-danger">DANH SÁCH BÀI BÁO</h3>
    <table class="table table-hover table-striped table-responsive">
        <a class="btn btn-outline-success mb-2 " style="float:left;" href="/admin/article/add" role="button">
            <i class="fa fa-plus" aria-hidden="true"></i>
            Thêm bài
        </a>
        <thead class="thead-dark">
            <tr>
                <th>STT</th>
                <th>Chuyên mục</th>
                <th>Trạng thái</th>
                <th style="max-width:550px;">Tiêu đề</th>
                <th>Thao tác</th>
            </tr>
        </thead>
        <tbody>
            {{#each this.list}}
            <tr class="text-primary">
                <td>{{id}}</td>
                <td>{{c_Name}}</td>
                <td>{{asts_name}}</td>
                <td  style="max-width:550px;">{{title}}</td>
                <td >
                    <div class="row">
                    <a class="btn btn-warning btn-sm mr-2" href="/admin/article/edit/{{id}}" role="button"
                        title="Edit Article">
                        <i class="fa fa-pencil" aria-hidden="true"></i>Chỉnh sửa
                    </a>
                      <a class="btn btn-primary  btn-sm " href="/admin/article/details/{{id}}" role="button" title="Edit Article">
                          <i class="fa fa-pencil" aria-hidden="true"></i>Chi tiết
                      </a>
               
                    </div>
                </td>
            </tr>

            {{/each}}
        </tbody>
    </table>
</div>
