{{#section 'js'}}
<script>
    $('#addTag').on('submit', function (e) {
        e.preventDefault();
        validate();
    })
    function validate() {
        const nameTag = $('#txtname').val();
        const aliasTag = $('#txtalias').val();
        if (nameTag == "" && aliasTag == "" ) {
            alert("Nội không được rỗng!!Mời bạn nhập lại!");
            return false;
        }
        else if (nameTag == "") {
            alert("Tên nhãn không được rỗng!!Mời bạn nhập lại!");
            return false;
        }
        else if (aliasTag == "") {
            alert("Bí danh nhãn không được rỗng!!Mời bạn nhập lại!");
            return false;
        }
        $('#addTag').off('submit').submit();
    }
</script>
{{/section}}
<div class="container">
    <div class="col-8 justify-content-center addcat">
        <h4 class="mt-5 text-success">Thêm Nhãn </h4>
        <div class="card-body Cat">
            <form method="POST" action="" id="addTag" >
                <div class="form-group">
                    <label for="txtConName">Tên nhãn <span class="validate">*</span></label>
                    <input type="text" class="form-control" id="txtname" name="Name">
                </div>

                <div class="form-group">
                    <label for="exampleInputHomePage1">Bí danh <span class="validate">*</span></label>
                    <input type="text" class="form-control" placeholder="vd: co-phieu" id="txtalias" name="tg_alias">
                </div>
                <a class="btn btn-success mt-3" href="/admin/tag" role="button" title="Trở về danh sách nhãn">
                    <i class="fa fa-backward" aria-hidden="true"></i>
                </a>
                <button type="submit" title="Lưu lại" class="btn btn-primary mt-3">
                    <i class="fa fa-check" aria-hidden="true"></i>
                    Lưu
                </button>
            </form>
        </div>

    </div>
</div>