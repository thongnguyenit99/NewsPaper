<style>
    .ct {
        justify-content: center;
        margin-left: 30%;
        border: 1.5px solid whitesmoke;
    }
</style>
<div class="ct col-5 mt-5 justify-content-between mt-5 mb-5">
    {{#if err}}
    <div class="alert alert-danger mt-3 fade show" style="width:100%;text-align:center" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
        {{err}}
    </div>
    {{/if}}
    <h2 style="text-align: center;">Đăng nhập</h2>
    <form action="" method="POST">
        <div class="form-group mt-3">
            <label for="name">Tài khoản:</label>
            <input type="text" class="form-control" id="name" placeholder=" Username" name="f_Username">
        </div>
        <div class="form-group">
            <label for="pwd">Mật khẩu:</label>
            <input type="password" class="form-control" id="pwd" placeholder=" password" name="f_Password">
            <input type="hidden" class="form-control" name="f_Permission" value='0'>
        </div>
        <div class="form-group form-check">
            <label class="form-check-label">
                <input class="form-check-input" type="checkbox" name="remember"> Nhớ mật khẩu
            </label>
        </div>
        <button type="submit" class="btn btn-primary mb-5 ml-5" id="login">Đăng nhập</button>
        <button type="button" class="btn btn-danger mb-5 ml-3" id="return" onclick="window.location.href='/'">Trở về</button>
        <button type="button" class="btn btn-success mb-5 ml-3" id="register" onclick="window.location.href='/register'">Đăng ký</button>
    </form>
</div>
