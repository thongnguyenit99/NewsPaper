{{#section 'js'}}
    <script>
        $('#frmlogin').on('submit', function (e) {
            e.preventDefault();
            validate();
        })
        function validate(){
            const user = $('#username').val();
            const passrd = $('#password').val();
            if(user== ""){
                alert('Tên đăng nhập không được rỗng.')
                    return false;
            }
            if(user.length < 8 ){
                alert('Tên đăng nhập phải từ 8 ký tự.')
                return false;
            }
            if(user.length > 25 ){
                alert('Tên đăng nhập tối đa 25 ký tự.')
                return false;
            }
             if(passrd == ""){
                alert('Mật khẩu không được rỗng.');
                return false;
            }
            if(passrd.length < 6){
                alert('Mật khẩu phải lơn hơn 5 ký tự');
                return false;
            }
            if(passrd.length > 24 ){
                alert('Mật khẩu phải bé hơn 25 ký tự.');
                return false;
            }
            $.getJSON(`/account/login/is-available_login?user=${user}&password=${passrd}`, function (data) {
                if (data) {
                    $('#frmlogin').off('submit').submit();
                } else {
                    alert('Tên đăng nhập hoặc mật khẩu không đúng.');
                }
            })
        }
    </script>

{{/section}}

<div class="login" class="container-fluid" style="margin-top: -16px; height:600px">
    <div  class="container">
        <div class="d-flex justify-content-center h-100">
            <div class="card">
                <div class="card-header">
